@model BusCompany.Models.Bus

@{
    ViewBag.Title = "Delete";
}

<h3>Вы уверены что отите удалить данный автобус?</h3>
<div>
    <h4>Bus</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номерной знак
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberPlate)
        </dd>

        <dt>
            Марка
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mark)
        </dd>

        <dt>
            Средняя скорость
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Speed)
        </dd>

        <dt>
            Расход топлива
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelConsumption)
        </dd>

        <dt>
            Пробег
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mileage)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
