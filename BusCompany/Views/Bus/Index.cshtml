@model IEnumerable<BusCompany.Models.Bus>

@{
    ViewBag.Title = "Автобусы";
}

<br>
<p align="left">
    @Html.ActionLink("Добавить автобус", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Номерной знак
        </th>
        <th>
            Марка
        </th>
        <th>
            Технический статус
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumberPlate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TechnicalStatus)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new {id=item.NumberPlate }) |
            @Html.ActionLink("Информация", "Details", new { id=item.NumberPlate }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.NumberPlate })
        </td>
    </tr>
}

</table>
