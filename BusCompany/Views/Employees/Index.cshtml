@model IEnumerable<BusCompany.Models.Employees>

<br><br>
    <p align="left">
        @Html.ActionLink("Добавить сотрудника", "Create")
    </p>
<table class="table">
    <tr>
        <th>
            Табельный номер
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Стаж работы
        </th>
        <th>
            Заработная плата
        </th>
        <th>
            Должность
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonnelNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @switch (item.Position)
                {
                    case "водитель            ":@Html.ActionLink("Изменить", "EditDriver", new { id = item.PersonnelNumber }); break;
                case "механик             ": @Html.ActionLink("Изменить", "EditMechanic", new { id = item.PersonnelNumber }); break;
            default: @Html.ActionLink("Изменить", "EditEmployees", new { id = item.PersonnelNumber }); break;
    }|


                @switch (item.Position)
                {
                    case "водитель            ":@Html.ActionLink("Информация", "DetailsDriver", new { id = item.PersonnelNumber }); break;
                case "кондуктор           ": @Html.ActionLink("Информация", "DetailsConductor", new { id = item.PersonnelNumber }); break;
            case "механик             ": @Html.ActionLink("Информация", "DetailsMechanic", new { id = item.PersonnelNumber }); break;
        default: @Html.ActionLink("Информация", "DetailsEmployees", new { id = item.PersonnelNumber }); break;
}|

                @switch (item.Position)
                {
                    case "водитель            ":@Html.ActionLink("Удалить", "DeleteDriver", new { id = item.PersonnelNumber })break;
                case "кондуктор           ": @Html.ActionLink("Удалить", "DeleteConductor", new { id = item.PersonnelNumber })break;
            case "механик             ": @Html.ActionLink("Удалить", "DeleteMechanic", new { id = item.PersonnelNumber })break;
        default: @Html.ActionLink("Удалить", "DeleteEmployees", new { id = item.PersonnelNumber })break;
}
            </td>
        </tr>
    }
</table>




