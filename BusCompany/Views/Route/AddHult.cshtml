@model BusCompany.Models.Route

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.Id)
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Название маршрута
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RouteName)
            </dd>

            <dt>
                Кол-во остановок на маршруте
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfHult)
            </dd>
        </dl>
    </div>

    <br>
    <h4> Список остановок</h4>
    <h4>
        @if (Model.NumberOfHult > 0)
        {
            foreach (var item in ViewBag.IDList)
            {
                <tr>
                    <td>
                        @item.HultName ->
                    </td>
                </tr>
            }
            @ViewBag.LustHult
        }
    </h4>
    
    <br>
     <div class="form-group">
            @Html.Label("Выберите остановку", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HultId , ViewBag.AllHult as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HultId, "", new { @class = "text-danger" })
            </div>
     </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернутся к просмотру всех маршрутов", "Index")
</div>
