@model BusCompany.Models.Route

@{
    ViewBag.Title = "Удалить";
}

<h3>Вы уверены что хотите удалить данный маршрут?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название маршрута
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RouteName)
        </dd>

        <dt>
            Количество остановок
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfHult)
        </dd>

        <dt>
            Утверждение маршрута
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApprovedStatus)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернутся к просмотру всех маршрутов", "Index")
        </div>
    }
</div>
