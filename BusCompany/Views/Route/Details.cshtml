@model BusCompany.Models.Route

@{
    ViewBag.Title = "Details";
}

<h2>Информация о маршруте</h2>

<div>
    <h4>Route</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название маршрута
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RouteName)
        </dd>

        <dt>
            Кол-во остановок на маршруте
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfHult)
        </dd>
    </dl>

    <br>
    <h4> Список остановок</h4>
    <h4>
        @if (Model.NumberOfHult > 0)
        {
            foreach (var item in ViewBag.IDList)
            {
                <tr>
                    <td>
                        @item.HultName ->
                    </td>
                </tr>
            }
            @ViewBag.LustHult
        }
    </h4>

    <br>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
