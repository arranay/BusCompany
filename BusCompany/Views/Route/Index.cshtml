@model IEnumerable<BusCompany.Models.Route>

@{
    ViewBag.Title = "Index";
}

<h2>Список маршрутов</h2>

<p>
    @Html.ActionLink("Создать маршрут", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название маршрута
        </th>
        <th>
            Кол-во остановок
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApprovedStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RouteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfHult)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApprovedStatus)
        </td>
        <td>
            @Html.ActionLink("Информация", "Details", new { id = item.Id })
            @if (item.NumberOfHult < 5)
            {
                @Html.ActionLink(" | Изменить статус маршрута ", "ErrorNumber")
            }
            else
            {
                @Html.ActionLink(" | Изменить статус маршрута ", "Edit", new { id = item.Id })
            }

            @if (!item.ApprovedStatus)
            {
                @Html.ActionLink(" | Добавить остановку | ", "AddHult", new { id = item.Id });
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id });
            }

        </td>
    </tr>
}

</table>
