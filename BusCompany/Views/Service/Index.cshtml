@model IEnumerable<BusCompany.Models.Service>

@{
    ViewBag.Title = "Список автобусов";
}

<h2>Таблица сервесных работ</h2>

<p>
    @Html.ActionLink("Добавить автобус на обслуживание", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Номер автобуса
        </th>
        <th>
            Марка
        </th>
        <th>
            Механик
        </th>
        <th>
            Дата
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdBus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bus.Mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employees.LastName)
            @Html.DisplayFor(modelItem => item.Employees.FirstName)
            @Html.DisplayFor(modelItem => item.Employees.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDate)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Информация", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
