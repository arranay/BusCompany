@model IEnumerable<BusCompany.Models.Users>


<table class="table">
    <tr>
        <th>
            Emaile
        </th>
        <th>
          Телефонный номер
        </th>
        <th>
           Роль
        </th>
        <th>
            Логин
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        @if (item.Role == null)
        {
        <td>
            @Html.ActionLink("Назначить пользователю роль", "Edit", new { id = item.Id })
        </td>
        }
        
    </tr>
}

</table>
